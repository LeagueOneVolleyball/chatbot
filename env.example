# OpenWebUI + MCP Servers Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# ============================================================================
# WebUI Configuration
# ============================================================================
WEBUI_AUTH=${WEBUI_AUTH:-false}
WEBUI_SECRET_KEY=${WEBUI_SECRET_KEY:-generate-a-secure-secret-key}
WEBUI_URL=${WEBUI_URL:-http://localhost:8080}
PORT=${PORT:-8080}
HOST=${HOST:-0.0.0.0}

# ============================================================================
# Snowflake Configuration
# ============================================================================
# IMPORTANT: Use account identifier WITHOUT .snowflakecomputing.com suffix
# Format: ACCOUNT_IDENTIFIER (e.g., "UPNOBVJ-OK59235", not "UPNOBVJ-OK59235.snowflakecomputing.com")
SNOWFLAKE_ACCOUNT=${SNOWFLAKE_ACCOUNT:-your-snowflake-account}
SNOWFLAKE_USER=${SNOWFLAKE_USER:-your-snowflake-username}
SNOWFLAKE_PRIVATE_KEY_PATH=${SNOWFLAKE_PRIVATE_KEY_PATH:-/keys/private_key.p8}
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=${SNOWFLAKE_PRIVATE_KEY_PASSPHRASE:-your-private-key-passphrase}
SNOWFLAKE_WAREHOUSE=${SNOWFLAKE_WAREHOUSE:-COMPUTE_WH}
SNOWFLAKE_DATABASE=${SNOWFLAKE_DATABASE:-your-database-name}
SNOWFLAKE_SCHEMA=${SNOWFLAKE_SCHEMA:-PUBLIC}
SNOWFLAKE_ROLE=${SNOWFLAKE_ROLE:-your-snowflake-role}
SNOWFLAKE_CONN_REFRESH_HOURS=${SNOWFLAKE_CONN_REFRESH_HOURS:-8}

# ============================================================================
# MCPO Configuration (MCP-to-OpenAPI Proxy)
# ============================================================================
# Snowflake MCPO Server
MCPO_SNOWFLAKE_API_KEY=${MCPO_SNOWFLAKE_API_KEY:-snowflake-secure-key-2024}
MCPO_SNOWFLAKE_PORT=${MCPO_SNOWFLAKE_PORT:-8001}
MCPO_SNOWFLAKE_HOST=${MCPO_SNOWFLAKE_HOST:-0.0.0.0}

# GitHub MCPO Server (example for future expansion)
MCPO_GITHUB_API_KEY=${MCPO_GITHUB_API_KEY:-github-secure-key-2024}
MCPO_GITHUB_PORT=${MCPO_GITHUB_PORT:-8002}

# General MCPO Configuration
MCPO_CONFIG_PATH=${MCPO_CONFIG_PATH:-/app/config/mcpo-config.json}
MCPO_LOG_LEVEL=${MCPO_LOG_LEVEL:-INFO}

# ============================================================================
# User Permissions Configuration
# ============================================================================
# Enable workspace tools access for regular users (default: false)
USER_PERMISSIONS_WORKSPACE_TOOLS_ACCESS=${USER_PERMISSIONS_WORKSPACE_TOOLS_ACCESS:-true}

# Optional: Enable other workspace permissions for users
# USER_PERMISSIONS_WORKSPACE_MODELS_ACCESS=true
# USER_PERMISSIONS_WORKSPACE_KNOWLEDGE_ACCESS=true
# USER_PERMISSIONS_WORKSPACE_PROMPTS_ACCESS=true

# ============================================================================
# Legacy MCP Configuration (deprecated - use MCPO instead)
# ============================================================================
MCP_SNOWFLAKE_SERVER_PORT=8081
MCP_CONFIG_PATH=/app/mcp-config.json

# ============================================================================
# GCP Configuration (for Cloud VM deployment)
# ============================================================================
# These are used by the deployment scripts
PROJECT_ID=${PROJECT_ID:-your-gcp-project-id}
REGION=${REGION:-us-central1}
ZONE=${ZONE:-us-central1-a}
INSTANCE_NAME=${INSTANCE_NAME:-openwebui-mcpo}
MACHINE_TYPE=${MACHINE_TYPE:-e2-standard-2}
DISK_SIZE=${DISK_SIZE:-50GB}

# Network configuration
NETWORK_NAME=${NETWORK_NAME:-openwebui-network}
FIREWALL_NAME=${FIREWALL_NAME:-openwebui-firewall}

# Secret names in Google Secret Manager
OPENAI_API_KEY_SECRET_NAME=${OPENAI_API_KEY_SECRET_NAME:-openwebui-openai-api-key}
SNOWFLAKE_ACCOUNT_SECRET_NAME=${SNOWFLAKE_ACCOUNT_SECRET_NAME:-snowflake-account}
SNOWFLAKE_USER_SECRET_NAME=${SNOWFLAKE_USER_SECRET_NAME:-snowflake-user}
SNOWFLAKE_PRIVATE_KEY_SECRET_NAME=${SNOWFLAKE_PRIVATE_KEY_SECRET_NAME:-snowflake-private-key}
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE_SECRET_NAME=${SNOWFLAKE_PRIVATE_KEY_PASSPHRASE_SECRET_NAME:-snowflake-private-key-passphrase}
MCPO_SNOWFLAKE_API_KEY_SECRET_NAME=${MCPO_SNOWFLAKE_API_KEY_SECRET_NAME:-mcpo-snowflake-api-key}

# ============================================================================
# Security Configuration
# ============================================================================
# Set to true to enable additional security features
ENABLE_SECURITY_HEADERS=${ENABLE_SECURITY_HEADERS:-false}
ENABLE_RATE_LIMITING=${ENABLE_RATE_LIMITING:-false}

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=${LOG_LEVEL:-INFO}
LOG_FORMAT=${LOG_FORMAT:-json}
LOG_DIR=${LOG_DIR:-/var/log}

# ============================================================================
# Development Configuration
# ============================================================================
# Set to true for development mode
DEBUG=${DEBUG:-false}
DEVELOPMENT_MODE=${DEVELOPMENT_MODE:-false} 