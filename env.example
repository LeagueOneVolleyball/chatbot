# OpenWebUI + MCP Servers Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# ============================================================================
# WebUI Configuration
# ============================================================================
WEBUI_AUTH=false
WEBUI_SECRET_KEY=your-secret-key-here
PORT=8080
HOST=0.0.0.0

# ============================================================================
# Snowflake Configuration
# ============================================================================
# IMPORTANT: Use account identifier WITHOUT .snowflakecomputing.com suffix
# Format: ACCOUNT_IDENTIFIER (e.g., "UPNOBVJ-OK59235", not "UPNOBVJ-OK59235.snowflakecomputing.com")
SNOWFLAKE_ACCOUNT=UPNOBVJ-OK59235
SNOWFLAKE_USER=your-snowflake-username
SNOWFLAKE_PRIVATE_KEY_CONTENT="-----BEGIN ENCRYPTED PRIVATE KEY-----
your-private-key-content-here
-----END ENCRYPTED PRIVATE KEY-----"
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your-private-key-passphrase
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=your-database-name
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=your-snowflake-role
SNOWFLAKE_CONN_REFRESH_HOURS=8

# ============================================================================
# MCPO Configuration (MCP-to-OpenAPI Proxy)
# ============================================================================
# Snowflake MCPO Server
MCPO_SNOWFLAKE_API_KEY=snowflake-secure-key-2024
MCPO_SNOWFLAKE_PORT=8001
MCPO_SNOWFLAKE_HOST=0.0.0.0

# GitHub MCPO Server (example for future expansion)
MCPO_GITHUB_API_KEY=github-secure-key-2024
MCPO_GITHUB_PORT=8002

# General MCPO Configuration
MCPO_CONFIG_PATH=/app/config/mcpo-config.json
MCPO_LOG_LEVEL=INFO

# ============================================================================
# User Permissions Configuration
# ============================================================================
# Enable workspace tools access for regular users (default: false)
USER_PERMISSIONS_WORKSPACE_TOOLS_ACCESS=true

# Optional: Enable other workspace permissions for users
# USER_PERMISSIONS_WORKSPACE_MODELS_ACCESS=true
# USER_PERMISSIONS_WORKSPACE_KNOWLEDGE_ACCESS=true
# USER_PERMISSIONS_WORKSPACE_PROMPTS_ACCESS=true

# ============================================================================
# Legacy MCP Configuration (deprecated - use MCPO instead)
# ============================================================================
MCP_SNOWFLAKE_SERVER_PORT=8081
MCP_CONFIG_PATH=/app/mcp-config.json

# ============================================================================
# Google Cloud Configuration (for Cloud Run deployment)
# ============================================================================
# These are used by the deployment scripts
PROJECT_ID=lovb-data
REGION=us-central1
SERVICE_NAME=openwebui-mcp

# Secret names in Google Secret Manager
OPENAI_API_KEY_SECRET_NAME=openwebui-openai-api-key
SNOWFLAKE_ACCOUNT_SECRET_NAME=snowflake-account
SNOWFLAKE_USER_SECRET_NAME=snowflake-user
SNOWFLAKE_PRIVATE_KEY_SECRET_NAME=snowflake-private-key
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE_SECRET_NAME=snowflake-private-key-passphrase
MCPO_SNOWFLAKE_API_KEY_SECRET_NAME=mcpo-snowflake-api-key 